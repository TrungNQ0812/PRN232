@page
@model eStore.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Category Management";
}

<h2>Categories</h2>

<p>
    <a asp-page="Create" class="btn btn-primary">+ Add New Category</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Category Name</th>
            <th style="width:200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.Categories)
        {
            <tr>
                <td>@c.CategoryName</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@c.CategoryId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="Delete" asp-route-id="@c.CategoryId" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>