@page
@model eStoreClient.Pages.Members.IndexModel
@{
    ViewData["Title"] = "Members";
}
<h1 style="text-align: center; color: #333; font-size: 35px; font-weight: bold">Member List

</h1>

<a asp-page="/Members/Create" style="text-decoration: none; background-color: #28a745; color: white; padding: 8px 15px; border-radius: 5px; font-weight: bold;">
    Create Member
</a>
<!-- Display all members -->
<table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
    <thead style="background-color: #007bff; color: white; border-radius: 5px;">
        <tr>
            <th style="padding: 12px 15px; text-align: left;">ID</th>
            <th style="padding: 12px 15px; text-align: left;">Email</th>
            <th style="padding: 12px 15px; text-align: left;">Company Name</th>
            <th style="padding: 12px 15px; text-align: left;">City</th>
            <th style="padding: 12px 15px; text-align: left;">Country</th>
            <th style="padding: 12px 15px; text-align: left;">Password</th>
            <th style="padding: 12px 15px; text-align: left;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model.Members)
        {
            <tr style="border-bottom: 1px solid #ddd;">
                <td style="padding: 12px 15px; font-size: 16px;">@member.MemberId</td>
                <td style="padding: 12px 15px; font-size: 16px;">@member.Email</td>
                <td style="padding: 12px 15px; font-size: 16px;">@member.CompanyName</td>
                <td style="padding: 12px 15px; font-size: 16px;">@member.City</td>
                <td style="padding: 12px 15px; font-size: 16px;">@member.Country</td>
                <td style="padding: 12px 15px; font-size: 16px;">@member.Password</td>
                <td style="padding: 12px 15px; font-size: 16px;">
                    <a asp-page="/Members/Edit" asp-route-id="@member.MemberId" style="text-decoration: none; color: #007bff; font-weight: bold;">
                        Edit
                    </a>
                    <a asp-page="/Members/Delete" asp-route-id="@member.MemberId" style="text-decoration: none; color: #d9534f; font-weight: bold;">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>