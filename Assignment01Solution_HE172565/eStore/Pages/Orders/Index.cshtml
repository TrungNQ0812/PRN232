@page
@model eStoreClient.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Orders";
}
<!-- Display all orders -->
<table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
    <thead style="background-color: #007bff; color: white;">
        <tr>
            <th style="padding: 12px 15px; text-align: left;">ID</th>
            <th style="padding: 12px 15px; text-align: left;">Member Id</th>
            <th style="padding: 12px 15px; text-align: left;">Order Date </th>
            <th style="padding: 12px 15px; text-align: left;">Required Date</th>
            <th style="padding: 12px 15px; text-align: left;">Shipped Date</th>
            <th style="padding: 12px 15px; text-align: left;">Freight</th>
            <th style="padding: 12px 15px; text-align: left;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr style="border-bottom: 1px solid #ddd;">
                <td style="padding: 12px 15px; font-size: 16px;">@order.OrderId</td>
                <td style="padding: 12px 15px; font-size: 16px;">@order.MemberId</td>
                <td style="padding: 12px 15px; font-size: 16px;">@order.OrderDate</td>
                <td style="padding: 12px 15px; font-size: 16px;">@order.RequiredDate</td>
                <td style="padding: 12px 15px; font-size: 16px;">@order.ShippedDate</td>
                <td style="padding: 12px 15px; font-size: 16px;">@order.Freight</td>
                <td style="padding: 12px 15px; font-size: 16px;">
                    <a asp-page="/Members/Edit" asp-route-id="@order.OrderId" style="text-decoration: none; color: #007bff; font-weight: bold;">
                        Edit
                    </a>
                    <a asp-page="/Members/Delete" asp-route-id="@order.OrderId" style="text-decoration: none; color: #d9534f; font-weight: bold;">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>